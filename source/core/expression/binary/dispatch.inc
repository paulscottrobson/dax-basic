;
;						 Handle dispatch to integer only
;
; ***************************************************************************************

#macro IntegerDispatch(iHandler)
		call 	DereferenceBoth 				; Dereference B:DE'DE and C:HL'HL
		ld 		a,b 							; Or the flags together
		or 		c
		jp 		nz,TypeMismatch 				; must both be integers
		jp 		iHandler 						; do the integer code.
#endmacro

